<h1>Home</h1>

<%= link_to 'Crear Nota', new_note_path %>

<% @notes.each do |note| %>
	<div id=<%= "#{note.id}" %>>
		<p><i><%= note.created_at %></i> <%= " - #{note.autor}" if note.autor %></p>
		<h3><%= note.title %></h3>
		<p><%= note.body %></p>
		<%= link_to 'Leer mas...', note %>
	</div>
<% end %>