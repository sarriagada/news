<h1>Home</h1>

<%= link_to 'Crear Nota', new_note_path %> | 
<%= link_to 'Listado de Notas', notes_path %>

<% @notes.each do |note| %>
	<div id=<%= "#{note.id}" %>>
		<p><i><%= note.created_at %></i> <%= " - #{note.autor}" if note.autor %></p>
		<h3><%= link_to note.title, note %></h3>
		<p><%= note.body %></p>
		<%= link_to 'Leer mas...', note %>
	</div>
<% end %>